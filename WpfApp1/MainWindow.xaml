<Window x:Class="TablePlots.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:TablePlots.ViewModels"
        xmlns:view="clr-namespace:TablePlots.View"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800"
        DataContext="{StaticResource MainViewModel}"
        d:DataContext="{d:DesignInstance vm:MainViewModel, IsDesignTimeCreatable=True}">
    <DockPanel LastChildFill="True">
        <!-- Top shared menu / toolbar area -->
        <Border DockPanel.Dock="Top"
                Background="#4A8CC7"
                Height="72"
                Padding="12">
            <TextBlock Text="メニューエリア"
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
        </Border>
        <!-- Left sidebar -->
        <Border DockPanel.Dock="Left"
                Width="140"
                Background="#E3E3E3"
                BorderBrush="#6B6B6B"
                BorderThickness="0,0,1,0">
            <!-- sidebar content can go here -->
        </Border>
        <!-- Main area -->
        <Border Background="#EFEFEF"
                Padding="12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <!-- tabs row -->
                    <RowDefinition Height="6*" />
                    <!-- content row -->
                </Grid.RowDefinitions>
                <!-- Tabs sit at top of main area, aligned left like the reference -->
                <TabControl x:Name="mainTabs"
                            Grid.Row="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            TabStripPlacement="Top"
                            Background="Transparent"
                            Margin="0,0,0,0"
                            Height="36"
                            SelectedIndex="{Binding SelectedIndex}">
                    <TabItem Header="tab1"
                             Padding="12,4" />
                    <TabItem Header="tab2"
                             Padding="12,4"
                             HorizontalAlignment="Left"
                             Margin="-2,-2,0,0"
                             Width="51" />
                </TabControl>
                <!-- Content area: stacked views, visibility controlled by mainTabs.SelectedIndex -->
                <Grid Grid.Row="1"
                      Background="#DDD"
                      Margin="8,8,8,8">
                    <!-- Tab1: 転置した DataGrid -->
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility"
                                        Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedIndex, ElementName=mainTabs}"
                                                 Value="0">
                                        <Setter Property="Visibility"
                                                Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <Border Margin="8"
                                Background="White">
                            <DataGrid ItemsSource="{Binding TransposedView}"
                                      AutoGenerateColumns="True"
                                      GridLinesVisibility="All"
                                      HeadersVisibility="All"
                                      IsReadOnly="True" />
                        </Border>
                    </Grid>
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility"
                                        Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedIndex, ElementName=mainTabs}"
                                                 Value="1">
                                        <Setter Property="Visibility"
                                                Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="8">
                            <ItemsControl ItemsSource="{Binding ValueMeters}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <view:ValueMeter Value="{Binding Value}"
                                                         GuideLineThickness="{Binding GuideLineThickness}"
                                                         Width="50"
                                                         Height="100" 
                                                         Margin="5"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </DockPanel>
</Window>