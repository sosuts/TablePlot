<UserControl x:Class="TablePlots.View.ValueMeter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="root">
    <Grid>
        <!-- 外枠 -->
        <Border BorderBrush="Black"
                BorderThickness="2" />
        <!-- 塗りつぶし -->
        <Grid>
            <Rectangle x:Name="FillRect"
                       VerticalAlignment="Bottom"
                       Fill="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource ValueToBrushConverter}}" />
        </Grid>
        <!-- ガイドライン（比率で配置） -->
        <Canvas>
            <Line X1="0"
                  X2="{Binding ActualWidth, ElementName=root}"
                  Y1="{Binding ActualHeight, ElementName=root, Converter={StaticResource RatioConverter}, ConverterParameter=0.25}"
                  Y2="{Binding ActualHeight, ElementName=root, Converter={StaticResource RatioConverter}, ConverterParameter=0.25}"
                  Stroke="Black"
                  StrokeThickness="{Binding GuideLineThickness, RelativeSource={RelativeSource AncestorType=UserControl}}"
                  StrokeDashArray="6,3" />
            <Line X1="0"
                  X2="{Binding ActualWidth, ElementName=root}"
                  Y1="{Binding ActualHeight, ElementName=root, Converter={StaticResource RatioConverter}, ConverterParameter=0.5}"
                  Y2="{Binding ActualHeight, ElementName=root, Converter={StaticResource RatioConverter}, ConverterParameter=0.5}"
                  Stroke="Black"
                  StrokeThickness="{Binding GuideLineThickness, RelativeSource={RelativeSource AncestorType=UserControl}}"
                  StrokeDashArray="6,3" />
            <Line X1="0"
                  X2="{Binding ActualWidth, ElementName=root}"
                  Y1="{Binding ActualHeight, ElementName=root, Converter={StaticResource RatioConverter}, ConverterParameter=0.75}"
                  Y2="{Binding ActualHeight, ElementName=root, Converter={StaticResource RatioConverter}, ConverterParameter=0.75}"
                  Stroke="Black"
                  StrokeThickness="{Binding GuideLineThickness, RelativeSource={RelativeSource AncestorType=UserControl}}"
                  StrokeDashArray="6,3" />
        </Canvas>
        <Border BorderBrush="Black"
                BorderThickness="2" />
    </Grid>
</UserControl>
